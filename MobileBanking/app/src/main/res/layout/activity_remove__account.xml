<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Remove_Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#7a0434"
            android:text="Remove Bank Account"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingTop="35dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uid"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="User ID"
            android:backgroundTint="#7a0434"
            android:textColorHint="#7a0434"
            android:textColor="#7a0434"
            android:drawableLeft="@drawable/userid"
            android:drawablePadding="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pswd"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Password"
            android:backgroundTint="#7a0434"
            android:textColorHint="#7a0434"
            android:textColor="#7a0434"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="12dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/remove"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonshape"
            android:text="Remove Account"/>

    </LinearLayout>


</ScrollView>